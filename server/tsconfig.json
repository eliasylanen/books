{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
